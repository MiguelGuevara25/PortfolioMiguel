---
import { FaGithub, FaLinkedinIn, FaInstagram } from "react-icons/fa";
import Skills from "./Skills.astro";
---

<div class="flex flex-col gap-3">
    <div class="border basis-2/3 rounded-xl p-10">
        <div
            class="flex md:flex-row md:gap-0 gap-5 flex-col md:items-center justify-between mb-7"
        >
            <div class="flex items-center gap-3">
                <div class="w-10">
                    <img
                        class="rounded-full w-full"
                        src="/thumb.webp"
                        alt="Miguel Guevara Thumbnail"
                    />
                </div>

                <div class="flex flex-col">
                    <span class="">Hi, I'm Miguel</span>
                    <span class="">Frontend Developer</span>
                </div>
            </div>

            <div class="flex gap-4 [&>a>svg]:text-3xl">
                <a
                    class="hover:scale-110 hover:brightness-150 transition-all cursor-pointer"
                    href="https://github.com/MiguelGuevara25"
                    target="_blank"
                >
                    <FaGithub />
                </a>

                <a
                    class="hover:scale-110 hover:brightness-150 transition-all cursor-pointer"
                    href="https://www.linkedin.com/in/migueldev1/"
                    target="_blank"
                >
                    <FaLinkedinIn />
                </a>

                <a
                    class="hover:scale-110 hover:brightness-150 transition-all cursor-pointer"
                    href="https://www.instagram.com/encode_dev"
                    target="_blank"
                >
                    <FaInstagram />
                </a>
            </div>
        </div>

        <div>
            <h2 class="lg:text-6xl text-5xl mb-8">
                Passionate to pursue the technology.
            </h2>
            <p class="text-gray-400 text-xl">
                I enjoy learning new things and try to overcome new challenges
                while analyzing how I improved through them.
            </p>
        </div>
    </div>

    <div class="lg:hidden block border basis-1/3 rounded-lg overflow-hidden">
        <img
            src="/miguel.webp"
            alt="Miguel Guevara"
            class="rounded-lg h-96 object-cover object-right"
        />
    </div>

    <Skills />
</div>
