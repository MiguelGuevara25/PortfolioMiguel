---
import { FaWhatsapp, FaRegEnvelope } from "react-icons/fa";
import Info from "../components/Info.astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import MyExp from "../components/MyExp";
import "animate.css";
---

<Layout title="Portfolio Miguel Guevara">
  <Header />
  <main
    class="flex flex-col gap-3 lg:max-w-screen-xl md:max-w-screen-lg w-[90%] mx-auto"
  >
    <section class="flex lg:flex-row flex-col gap-3 text-gray-300">
      <Info />

      <div class="hidden lg:block border basis-1/3 rounded-lg overflow-hidden">
        <img
          src="/miguel.webp"
          alt="Miguel Guevara"
          class="rounded-lg h-full object-cover object-right"
        />
      </div>
    </section>
  </main>

  <footer
    class="flex lg:flex-row flex-col-reverse gap-3 mt-3 lg:max-w-screen-xl md:max-w-screen-lg w-[90%] mx-auto text-gray-300"
  >
    <div class="rounded-lg basis-1/3 p-10 border">
      <h3 class="text-4xl mb-2 font-bold">Contact Me</h3>
      <p class="mb-4">Make a contact via email or whatsapp.</p>
      <div class="inline-flex flex-col">
        <div class="text-2xl border p-2">
          <FaWhatsapp />
        </div>

        <div class="text-2xl border p-2">
          <FaRegEnvelope />
        </div>
      </div>
    </div>

    <div class="border rounded-lg p-10 lg:w-2/3">
      <MyExp client:load />
    </div>
  </footer>
</Layout>
